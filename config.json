	},
	
	"css": {
		"bundle": "app.css",
		"lint": false,
		
		"paths": ["<INIT>",
				  "css/options.css",
				  "fonts/fontawesome.css",


				  "<JQUERY>",
				  ">>>>>lib/jquery/jquery.mobile.css",


				  "<DETECTION / FALLBACKS / POLYFILLS>",


				  "DATA>",
				  "FORMS>",
				  "WRAPPERS>",
				  "UTILITIES>",
				  "UI",


				  "<FX>",
				  "lib/dzsparallaxer/dzsparallaxer.css",


				  "<DOM>",
				  "<SCROLL MANIPULATION>",
				  "<3D>",
				  "<OTHER>",


				  "<COMPONENTS>",
				  ">>>>>lib/fullpage/fullpage.css",
				  ">>>>>lib/fullpage/nav.css",
				  "lib/metafizzy/flickity.css",


				  "<WIDGETS>",
				  "lib/waves/waves.css",


				  "<FRAMEWORK>",
				  "lib/framework/foundation.css",
				  ">>>>>lib/framework/foundation.rtl.css",


				  "<ELEMENTS>",
				  "css/elements/*.css",


				  "<UI>",
				  "css/ui/*.css",


				  "<COMPONENTS>",
				  "css/components/*.css",


				  "<UTILITIES>",
				  "css/utilities/*.css",


				  "<CORE>",
				  "css/copy.css",
				  "css/layout.css",
				  "css/rules.css",
				  "css/theme.css",
				  "css/responsive.css"
				 ]
	
	},
	
	"sync": {
		"notify": true,

		"browsers": ["chrome"],
		"host": "",
		"https": false,
		"localOnly": false,
		"online": true,
		"port": "3000",

		"cors": true,
		"open": "external",
		"tunnel": "my-private-site",
		"xip": false,

		"codeSync": true,
		"injectChanges": true,
		"watch": true,

		"ghostMode": true,

		"reloadDebounce": 0,
		"reloadDelay": 1000,
		"reloadThrottle": 0,
		
		"scrollElements": [],
		"scrollElementMapping": [],
		"scrollProportionally": true,
		"scrollRestoreTechnique": "window.name",
		"scrollThrottle": 0,

		"logConnections": true,
		"logFileChanges": false,
		"logLevel": "info",
		"timestamps": true
	}
	
}
